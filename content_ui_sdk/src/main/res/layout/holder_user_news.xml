<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_news_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="6dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="@dimen/holder_user_news_card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/holder_user_news_card_image"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/promotedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/holder_user_news_publisher"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:text="@string/promoted" />

            <ImageView
                android:id="@+id/newsImageView"
                android:layout_width="@dimen/holder_user_news_card_image"
                android:layout_height="@dimen/holder_user_news_card_image"
                android:scaleType="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/holder_user_news_title"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Simple text" />

            <TextView
                android:id="@+id/publisherTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/holder_user_news_publisher"
                android:textSize="14sp"
                android:gravity="left"
                tools:text="Womensarticle.com" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/holder_user_news_date"
                android:textSize="14sp"
                tools:text="23:00 PM, September 14, 2016" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>